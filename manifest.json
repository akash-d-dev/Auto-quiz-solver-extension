{
  "name": "Kalvium Auto Quiz",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "Let's solve the quiz",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "printerProvider",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.kalvium.community/*"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://assessment-api.kalvium.community/api/assessments/*",
    "https://kalvium.community/*",
    "https://app.kalvium.community/*",
    "https://signal-api.kalvium.community/*",
    "*://*.google.com/",
    "<all_urls>",
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "interceptor.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}